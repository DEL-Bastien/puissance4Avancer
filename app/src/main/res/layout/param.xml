<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:id="@+id/layout">
    <TextView
        android:id="@+id/titreNbJoueur"
        android:layout_width="379dp"
        android:layout_height="44dp"
        android:text="Nombre de joueurs"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        app:fontFamily="sans-serif-condensed-medium"/>


    <Switch
        android:id="@+id/btnNbJ2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Joueurs      "
        android:textSize="18sp" />

    <Switch
        android:id="@+id/btnNbJ3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 Joueurs      "
        android:textSize="18sp" />

    <Switch
        android:id="@+id/btnNbJ4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 Joueurs      "
        android:textSize="18sp" />

    <Switch
        android:id="@+id/btnNbJ5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 Joueurs      "
        android:textSize="18sp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/titreTaillePlateau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Taille du plateau"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        app:fontFamily="sans-serif-condensed-medium" />

    <EditText
        android:id="@+id/editTxtHauteur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Hauteur du plateau entre 4 et 9"/>

    <EditText
        android:id="@+id/editTxtLargeur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Largeur du plateau entre 4 et 9"
        android:layout_marginBottom="30dp"/>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

        <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/btnQuit"/>
        <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/btnSave"/>
    </LinearLayout>
</LinearLayout>

